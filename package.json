{
  "name": "@app/api",
  "private": true,
  "version": "0.9.1",
  "description": "",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "bootstrap": "npm install --no-audit --no-fund",
    "start:api": "NODE_ENV=development nodemon --config ./cfg-nodemon-api.json",
    "start:api:prod": "NODE_ENV=production forever start -v -c ts-node api.entry.ts",
    "restart:api:prod": "forever restart api.entry.ts",
    "stop:api:prod": "forever stop api.entry.ts",
    "db:migrate": "ts-node ./scripts/db-migrate",
    "db:rollback": "ts-node ./scripts/db-rollback",
    "db:migrate:down": "ts-node ./scripts/db-migrate-down",
    "db:seed": "ts-node ./scripts/db-seed",
    "postinstall": "ts-node ./scripts/hooks/posthook"
  },
  "devDependencies": {
    "@app/api": "file:./",
    "@app/omni": "file:../app-omni",
    "@sotaoi/api": "file:../packages/sotaoi-api",
    "@sotaoi/omni": "file:../packages/sotaoi-omni",
    "@types/hapi__hapi": "^19.0.3",
    "@types/node": "^14"
  },
  "dependencies": {
    "@app/omni": "^0.9.1",
    "@hapi/hapi": "19.1.1",
    "@sotaoi/api": "^0.9.1",
    "@sotaoi/omni": "^0.9.1",
    "dotenv": "^8.2.0",
    "forever": "^4.0.1",
    "nodemon": "^2.0.4",
    "ts-node": "^8.10.2",
    "typescript": "4.1.5"
  }
}
